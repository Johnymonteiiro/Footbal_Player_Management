generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {

  id                String    @id @default(uuid())
  name              String
  email             String    @unique
  password          String
  dorsal            Int? @unique 
  profile           Profile?

  @@map("users")
}

model Profile {

  id                String    @id @default(uuid())
  avatar_url        String  
  nacionality       String
  position          String[]
  age               Int  @unique
  team              String
  goals             Int
  best_foot         String[]
  
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String @unique
  
  @@map("profile")
}